@model BlogVivi.Web.Models.Login.LoginViewModel
@{
    ViewBag.Title = " Login";


}

<h2>Login</h2>
@using (Html.BeginForm("Index", "Login", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(x=> x.Login, new { @class = "col-md-2 control-label"} )
        <div class="col-md-10">
            @Html.TextBoxFor(x => x.Login, new { @class = "form-control", style = "width:280px" })
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.senha, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(x => x.senha, new { @class = "form-control", style = "width:280px" })
            @Html.ValidationMessageFor(x => x.senha)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                @Html.CheckBoxFor(m=> m.Lembrar)
                @Html.LabelFor(m=> m.Lembrar)
            </div>
        </div>
    </div>

    <div class="form-group">

    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Entrar" class="btn btn-primary"/>
    </div>
    </div>
}
